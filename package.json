{
  "name": "aaronqian-com",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "astro check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "autofix": "npm run format && npm run lint:fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "ci": "npm run test:run && npm run format:check && npm run type-check && npm run lint && npm run build",
    "dev": "astro dev",
    "prebuild": "npm run generate:giscus-themes",
    "build": "astro build",
    "preview": "npx wrangler dev",
    "deploy": "npm run build && npx wrangler deploy",
    "astro": "astro",
    "prepare": "husky",
    "postinstall": "npm run generate:giscus-themes",
    "generate:giscus-themes": "node ./scripts/generate-giscus-theme.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": ["prettier --check", "astro check", "eslint"],
    "*.{css,json,md}": ["prettier --check"]
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.10",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
