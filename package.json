{
  "name": "aaronqian-com",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": ">=22.20.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "type-check": "astro check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "autofix": "npm run lint:fix && npm run format",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "check:links": "START_SERVER_AND_TEST_INSECURE=1 start-server-and-test preview:https https://localhost:9787 'npx linkinator https://localhost:9787 --skip github.com --skip developer.microsoft.com --skip trends.google.com --skip localhost:8080'",
    "ci": "astro sync && npm run format:check && npm run type-check && npm run lint && npm run test:run && npm run build && npm run check:links",
    "dev": "astro dev",
    "prebuild": "npm run generate:giscus-themes",
    "build": "astro check && astro build",
    "preview": "npx wrangler dev",
    "preview:https": "npx wrangler dev --local-protocol https --port 9787 --log-level error",
    "deploy": "npm run build && npx wrangler deploy",
    "astro": "astro",
    "prepare": "husky",
    "postinstall": "npm run generate:giscus-themes",
    "generate:giscus-themes": "node ./scripts/generate-giscus-theme.js",
    "content": "node ./scripts/create-content.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": ["prettier --check", "astro check", "oxlint"],
    "*.{css,json,md}": ["prettier --check"]
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.6.0",
    "@clack/prompts": "^0.11.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@iconify-json/heroicons": "^1.2.3",
    "@iconify-json/simple-icons": "^1.2.60",
    "@microflash/rehype-figure": "^2.1.4",
    "@tailwindcss/vite": "^4.1.15",
    "astro": "^5.15.1",
    "astro-icon": "^1.1.5",
    "astro-og-canvas": "^0.7.2",
    "class-variance-authority": "^0.7.1",
    "gsap": "^3.13.0",
    "marked": "^17.0.0",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "remark-attr": "^0.11.1",
    "remark-directive": "^4.0.0",
    "remark-math": "^6.0.0",
    "schema-dts": "^1.1.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.15",
    "three": "^0.181.2",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/cloudflare": "^12.6.11",
    "@astrojs/ts-plugin": "^1.10.5",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/postcss-import": "^14.0.3",
    "@types/three": "^0.181.0",
    "@vitest/ui": "^4.0.1",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.8",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "linkinator": "^7.5.0",
    "lint-staged": "^16.2.5",
    "oxlint": "^1.26.0",
    "oxlint-tsgolint": "^0.5.0",
    "postcss-cli": "^11.0.1",
    "postcss-css-variables": "^0.19.0",
    "postcss-custom-properties": "^14.0.6",
    "postcss-import": "^16.1.1",
    "postcss-preset-env": "^10.4.0",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "start-server-and-test": "^2.1.3",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.1",
    "wrangler": "^4.49.0"
  }
}
