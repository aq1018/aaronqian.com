---
/**
 * Creates gradient mask with horizontal and subtle vertical fade
 * Strong fade on x-axis (left/right edges), subtle fade on y-axis (top/bottom)
 */

interface Props {
  width: number
  height: number
}

const { width, height } = Astro.props
const cx = width / 2
const cy = height / 2
const rx = width / 2
const ry = height * 0.7 // Extends beyond height for subtler vertical fade
---

<defs>
  <!-- Elliptical radial gradient -->
  <radialGradient id="fade-gradient">
    <stop offset="0%" stop-color="white" stop-opacity="0.8"></stop>
    <stop offset="50%" stop-color="white" stop-opacity="0.6"></stop>
    <stop offset="70%" stop-color="white" stop-opacity="0.4"></stop>
    <stop offset="100%" stop-color="white" stop-opacity="0.1"></stop>
  </radialGradient>

  <!-- Mask that uses the gradient with elliptical shape -->
  <mask id="fade-mask">
    <ellipse {cx} {cy} {rx} {ry} fill="url(#fade-gradient)"></ellipse>
  </mask>
</defs>
