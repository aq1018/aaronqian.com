---
import Icon from '@/components/primitives/Icon.astro'
import PillToggle from '@/components/primitives/PillToggle.astro'
import PillToggleButton from '@/components/primitives/PillToggleButton.astro'
---

<PillToggle id="theme-toggle" ariaLabel="Choose theme">
  <PillToggleButton data-value="light" aria-label="Light theme">
    <Icon name="heroicons:sun-20-solid" />
  </PillToggleButton>
  <PillToggleButton data-value="dark" aria-label="Dark theme">
    <Icon name="heroicons:moon-20-solid" />
  </PillToggleButton>
  <PillToggleButton data-value="system" aria-label="System theme">
    <Icon name="heroicons:computer-desktop-20-solid" />
  </PillToggleButton>
</PillToggle>
