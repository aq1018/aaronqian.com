---
import ThemeToggle from './ThemeToggle.astro'
import Link from '@/components/ui/Link.astro'
import { Icon } from 'astro-icon/components'

const currentPath = Astro.url.pathname
---

<nav class="sticky top-0 z-50 border-b border-border bg-surface/95 backdrop-blur-sm">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Home Icon (Left) -->
      <div class="flex items-center">
        <Link href="/" variant="nav" active={currentPath === '/'} aria-label="Home">
          <Icon name="heroicons:home-solid" class="h-5 w-5" />
        </Link>
      </div>

      <!-- Nav Links (Right) -->
      <div class="flex items-center gap-4 sm:gap-6">
        <Link
          href="/projects"
          variant="nav"
          active={currentPath === '/projects' || currentPath.startsWith('/projects/')}
        >
          Projects
        </Link>

        <Link
          href="/blog"
          variant="nav"
          active={currentPath === '/blog' || currentPath.startsWith('/blog/')}
        >
          Blog
        </Link>

        <!-- Theme Toggle -->
        <ThemeToggle />
      </div>
    </div>
  </div>
</nav>
