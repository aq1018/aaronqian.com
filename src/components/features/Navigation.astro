---
import ThemeToggle from './ThemeToggle.astro'
import Link from '@/components/ui/Link.astro'
import Container from '@/components/ui/Container.astro'
import Stack from '@/components/ui/Stack.astro'
import { Icon } from 'astro-icon/components'

const currentPath = Astro.url.pathname
---

<nav class="sticky top-0 z-50 border-b border-border bg-surface/95 backdrop-blur-sm">
  <Container size="wide">
    <div class="flex h-16 items-center justify-between">
      <!-- Home Icon (Left) -->
      <div class="flex items-center">
        <Link href="/" variant="nav" active={currentPath === '/'} aria-label="Home">
          <Icon name="heroicons:home-solid" class="h-5 w-5" />
        </Link>
      </div>

      <!-- Nav Links (Right) -->
      <Stack direction="horizontal" gap="small">
        <Link
          href="/projects"
          variant="nav"
          active={currentPath === '/projects' || currentPath.startsWith('/projects/')}
        >
          Projects
        </Link>

        <Link
          href="/blog"
          variant="nav"
          active={currentPath === '/blog' || currentPath.startsWith('/blog/')}
        >
          Blog
        </Link>

        <!-- Theme Toggle -->
        <ThemeToggle />
      </Stack>
    </div>
  </Container>
</nav>
