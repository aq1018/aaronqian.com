---
import ThemeToggle from './ThemeToggle.astro'

import Container from '@/components/primitives/Container.astro'
import Link from '@/components/primitives/Link.astro'
import NavBar from '@/components/primitives/NavBar.astro'
import NavBarContent from '@/components/primitives/NavBarContent.astro'
import Stack from '@/components/primitives/Stack.astro'

const currentPath = Astro.url.pathname
---

<NavBar position="sticky" border="bottom" backdrop>
  <Container width="wide">
    <NavBarContent>
      <!-- Home Link (Left) -->
      <Link
        variant="nav"
        href="/"
        active={currentPath === '/'}
        aria-label="Home"
        class="font-mono text-xl"
      >
        ΛΘ
      </Link>

      <!-- Nav Links (Right) -->
      <Stack direction="row" space="sm" align="center">
        <Link
          variant="nav"
          href="/projects"
          active={currentPath === '/projects' || currentPath.startsWith('/projects/')}
        >
          Projects
        </Link>

        <Link
          variant="nav"
          href="/blog"
          active={currentPath === '/blog' || currentPath.startsWith('/blog/')}
        >
          Blog
        </Link>

        <Link variant="nav" href="/about" active={currentPath === '/about'}> About </Link>

        <!-- Theme Toggle -->
        <ThemeToggle />
      </Stack>
    </NavBarContent>
  </Container>
</NavBar>
