---
import ThemeToggle from './ThemeToggle.astro'

import Container from '@/components/primitives/Container.astro'
import Link from '@/components/primitives/Link.astro'
import NavBar from '@/components/primitives/NavBar.astro'
import NavBarContent from '@/components/primitives/NavBarContent.astro'
import Stack from '@/components/primitives/Stack.astro'

const currentPath = Astro.url.pathname
---

<NavBar position="sticky" border="bottom" backdrop>
  <Container width="wide">
    <NavBarContent>
      <Link variant="nav" href="/" active={currentPath === '/'} aria-label="Home">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 64 64"
          class="h-16 w-16"
          role="img"
          aria-hidden="true"
        >
          <g
            transform="translate(-5,-2)"
            fill="none"
            stroke="currentColor"
            stroke-width="4.6"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            {/* Lambda (Λ) */}
            <path d="M16 44 L26 24 L36 44"></path>
            {/* Theta (Θ) outline */}
            <path
              d="M48 24 C53 24 57 28 57 34 C57 40 53 44 48 44 C43 44 39 40 39 34 C39 28 43 24 48 24 Z"
            ></path>
            {/* Theta (Θ) inner bar */}
            <path d="M44 34 H52"></path>
          </g>
        </svg>
      </Link>

      <Stack direction="row" space="sm" align="center">
        <Link variant="nav" href="/projects" active={currentPath.startsWith('/projects')}>
          Projects
        </Link>

        <Link variant="nav" href="/blog" active={currentPath.startsWith('/blog')}> Blog </Link>

        <Link variant="nav" href="/about" active={currentPath.startsWith('/about')}> About </Link>

        <ThemeToggle />
      </Stack>
    </NavBarContent>
  </Container>
</NavBar>
