---
import ThemeToggle from './ThemeToggle.astro'
import { Icon } from 'astro-icon/components'

const currentPath = Astro.url.pathname
---

<nav class="sticky top-0 z-50 border-b border-border bg-surface/95 backdrop-blur-sm">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Home Icon (Left) -->
      <div class="flex items-center">
        <a
          href="/"
          class:list={[
            'transition-colors hover:text-primary-hover',
            currentPath === '/' ? 'text-primary' : 'text-muted',
          ]}
          aria-label="Home"
        >
          <Icon name="heroicons:home-solid" class="h-5 w-5" />
        </a>
      </div>

      <!-- Nav Links (Right) -->
      <div class="flex items-center gap-6">
        <a
          href="/projects"
          class:list={[
            'transition-colors hover:text-primary-hover',
            currentPath === '/projects' || currentPath.startsWith('/projects/')
              ? 'font-semibold text-primary'
              : 'text-muted',
          ]}
        >
          Projects
        </a>

        <a
          href="/blog"
          class:list={[
            'transition-colors hover:text-primary-hover',
            currentPath === '/blog' || currentPath.startsWith('/blog/')
              ? 'font-semibold text-primary'
              : 'text-muted',
          ]}
        >
          Blog
        </a>

        <!-- Theme Toggle -->
        <ThemeToggle />
      </div>
    </div>
  </div>
</nav>
