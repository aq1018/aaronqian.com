---
import { headingVariants, type HeadingVariants } from './Heading.cva'
import { cn } from '@/lib/utils'

interface Props extends HeadingVariants {
  id?: string
  class?: string
  [key: string]: any
}

const { level = 'h2', font, weight, color, align, id, class: className, ...rest } = Astro.props

const Element = level as 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'
---

<Element
  {id}
  class={cn(headingVariants({ level, font, weight, color, align }), className)}
  {...rest}
>
  <slot />
</Element>
