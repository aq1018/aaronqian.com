---
import { pillToggleButtonVariants, type PillToggleButtonVariants } from './PillToggle.cva'
import { cn } from '@/lib/utils'

interface Props extends PillToggleButtonVariants {
  'data-value': string
  'aria-label': string
  class?: string
  [key: string]: any
}

const { 'data-value': dataValue, 'aria-label': ariaLabel, class: className, ...rest } = Astro.props
---

<button
  data-value={dataValue}
  aria-label={ariaLabel}
  type="button"
  class={cn(pillToggleButtonVariants(), className)}
  {...rest}
>
  <slot />
</button>
