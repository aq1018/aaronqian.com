---
import { pillToggleButtonVariants, type PillToggleButtonVariants } from './PillToggleButton.cva'

interface Props extends PillToggleButtonVariants {
  'data-value': string
  'aria-label': string
  class?: string
  [key: string]: any
}

const { 'data-value': dataValue, 'aria-label': ariaLabel, class: className, ...rest } = Astro.props
---

<button
  slot="option"
  data-value={dataValue}
  aria-label={ariaLabel}
  type="button"
  class={pillToggleButtonVariants({ class: className })}
  {...rest}
>
  <slot />
</button>
