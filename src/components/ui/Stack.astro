---
import { stackVariants, type StackVariants } from './Stack.cva'
import { cn } from '@/lib/utils'

interface Props extends StackVariants {
  class?: string
  [key: string]: any // Allow any additional HTML attributes
}

const { direction, gap, class: className = '', ...rest } = Astro.props
---

<div class={cn(stackVariants({ direction, gap }), className)} {...rest}>
  <slot />
</div>
