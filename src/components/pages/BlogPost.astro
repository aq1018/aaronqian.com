---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'
import Section from '@/components/ui/Section.astro'
import Container from '@/components/ui/Container.astro'
import Heading from '@/components/ui/Heading.astro'
import Text from '@/components/ui/Text.astro'

interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
const { Content } = await post.render()
---

<main class="flex-1">
  <Section variant="subsection">
    <Container>
      <a
        href="/blog"
        class="inline-flex items-center text-link transition-colors hover:text-link-hover"
      >
        ‚Üê Back to blog
      </a>

      <Heading level="h1" class="mt-6 leading-tight sm:text-5xl">
        {post.data.title}
      </Heading>

      {
        post.data.hero && (
          <Image
            src={post.data.hero}
            alt={post.data.title}
            class="mt-8 h-auto w-full max-h-96 rounded-lg object-cover"
          />
        )
      }

      <div class="mb-8 border-b border-border pb-4">
        <Text variant="muted" class="mt-4">
          {
            post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })
          }
        </Text>
        {
          post.data.tags && (
            <div class="mt-4 flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <span class="rounded bg-highlight px-2 py-1 text-sm text-muted">{tag}</span>
              ))}
            </div>
          )
        }
      </div>

      <div class="prose prose-lg dark:prose-invert max-w-none">
        <Content />
      </div>
    </Container>
  </Section>
</main>
