---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'
import Badge from '@/components/ui/Badge.astro'
import Section from '@/components/ui/Section.astro'
import Container from '@/components/ui/Container.astro'
import Stack from '@/components/ui/Stack.astro'
import Heading from '@/components/ui/Heading.astro'
import Text from '@/components/ui/Text.astro'
import Comments from '@/components/features/Comments.astro'

interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
const { Content } = await post.render()
---

<main class="flex-1">
  <Section variant="subsection">
    <Container>
      <a
        href="/blog"
        class="inline-flex items-center text-link transition-colors hover:[color:color-mix(in_oklab,var(--color-link),black_10%)]"
      >
        ‚Üê Back to blog
      </a>

      <Heading level="h1" class="mt-6 leading-tight sm:text-5xl">
        {post.data.title}
      </Heading>

      {
        post.data.hero && (
          <Image
            src={post.data.hero}
            alt={post.data.title}
            class="mt-8 h-auto w-full max-h-96 rounded-lg object-cover"
          />
        )
      }

      <div class="mb-8 border-b border-border pb-4">
        <Text variant="muted" class="mt-4">
          {
            post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })
          }
        </Text>
        {
          post.data.tags && (
            <Stack direction="horizontal" gap="tight" class="mt-4 flex-wrap">
              {post.data.tags.map((tag) => (
                <Badge color="muted" variant="soft" size="md">
                  {tag}
                </Badge>
              ))}
            </Stack>
          )
        }
      </div>

      <div class="prose prose-lg dark:prose-invert max-w-none">
        <Content />
      </div>

      <Comments class="mt-16" />
    </Container>
  </Section>
</main>
