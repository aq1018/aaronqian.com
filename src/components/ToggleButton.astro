---
interface Props {
  id: string
  ariaLabel: string
  target?: string
  class?: string
}

const { id, ariaLabel, target, class: className = '' } = Astro.props
---

<div class={`relative ${className}`}>
  <button
    {id}
    type="button"
    class="flex cursor-pointer items-center gap-1 rounded-lg p-2 text-muted transition-colors"
    aria-label={ariaLabel}
    aria-haspopup="true"
    aria-expanded="false"
    data-toggle-button
    data-toggle-target={target}
  >
    <slot />
  </button>

  <slot name="menu" />
</div>
