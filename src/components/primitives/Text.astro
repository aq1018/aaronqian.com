---
import type { HTMLTag, Polymorphic } from 'astro/types'

import { type TextStyle, textVariants } from './typography.cva'

import { cn } from '@/lib/utils'

export type Props<Tag extends HTMLTag = 'p'> = Polymorphic<{ as: Tag }> &
  TextStyle & {
    class?: string
  }

const {
  size,
  align,
  color,
  family,
  uppercase,
  strong,
  italic,
  strike,
  whitespace,
  truncate,
  transform,
  break: breakProp,
  as: Element = 'p',
  class: className = '',
  ...rest
} = Astro.props

const classes = cn(
  textVariants({
    size,
    align,
    color,
    family,
    uppercase,
    strong,
    italic,
    strike,
    whitespace,
    truncate,
    transform,
    break: breakProp,
  }),
  className,
)
---

<Element class={classes} {...rest}>
  <slot />
</Element>
