---
import { bleedCva, type BleedStyle } from './Bleed.cva'
import { cn } from '@/lib/utils'

interface Props extends BleedStyle {
  class?: string
  [key: string]: any // Allow any additional HTML attributes
}

const { size, class: className = '', ...rest } = Astro.props
---

<div class={cn(bleedCva({ size }), className)} {...rest}>
  <slot />
</div>
