---
import type { HTMLAttributes } from 'astro/types'

import { bleedCva } from './Bleed.cva'
import type { BleedStyle } from './Bleed.cva'

import { cn } from '@/lib/utils'

export interface Props extends HTMLAttributes<'div'>, BleedStyle {
  class?: string
}

const { size, class: className = '', ...rest } = Astro.props
---

<div class={cn(bleedCva({ size }), className)} {...rest}>
  <slot />
</div>
