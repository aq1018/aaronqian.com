---
import { surfaceCva, type SurfaceStyle } from './Surface.cva'
import { cn } from '@/lib/utils'

interface Props extends SurfaceStyle {
  class?: string
  [key: string]: any // Allow any additional HTML attributes
}

const { padY, class: className = '', ...rest } = Astro.props
---

<section class={cn(surfaceCva({ padY }), className)} {...rest}>
  {
    Astro.slots.has('background') && (
      <div class="absolute inset-0 -z-10">
        <slot name="background" />
      </div>
    )
  }
  <slot />
</section>
