---
import type { HTMLAttributes } from 'astro/types'

import { surfaceCva } from './Surface.cva'
import type { SurfaceStyle } from './Surface.cva'

import { cn } from '@/lib/utils'

export interface Props extends HTMLAttributes<'section'>, SurfaceStyle {
  class?: string
}

const { padY, class: className = '', ...rest } = Astro.props
---

<section class={cn(surfaceCva({ padY }), className)} {...rest}>
  {
    Astro.slots.has('background') && (
      <div class="pointer-events-none absolute inset-0 -z-10 overflow-hidden">
        <slot name="background" />
      </div>
    )
  }
  <slot />
</section>
