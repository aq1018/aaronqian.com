---
import Badge from './Badge.astro'
import Tooltip from './Tooltip.astro'

export interface Props {
  status: 'in-development' | 'active' | 'completed' | 'up-for-adoption'
  size?: 'xs' | 'sm' | 'md'
  class?: string
}

const { status, size = 'md', class: className } = Astro.props

const statusStyles = {
  'in-development': 'bg-muted/20 text-content border-border',
  active: 'bg-primary/20 text-content border-primary/40',
  completed: 'bg-content/20 text-content/60 border-content/40',
  'up-for-adoption': 'bg-warning/20 text-warning border-warning/40',
}

const statusLabels = {
  'in-development': 'IN DEVELOPMENT',
  active: 'ACTIVE',
  completed: 'COMPLETED',
  'up-for-adoption': 'UP FOR ADOPTION',
}

const statusDescriptions = {
  'in-development': 'Currently being built and improved',
  active: 'Actively maintained and updated',
  completed: 'Feature complete and stable',
  'up-for-adoption': 'Looking for new maintainer',
}
---

<Tooltip text={statusDescriptions[status]} position="top">
  <Badge {size} uppercase class={`${statusStyles[status]} ${className ?? ''}`}>
    {statusLabels[status]}
  </Badge>
</Tooltip>
