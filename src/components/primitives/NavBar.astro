---
import type { HTMLTag, Polymorphic } from 'astro/types'

import { type NavBarStyle, navBarCva } from './NavBar.cva'

import { cn } from '@/lib/utils'

export type Props<Tag extends HTMLTag = 'nav'> = Polymorphic<{ as: Tag }> &
  NavBarStyle & {
    class?: string
  }

const {
  position,
  placement,
  border,
  backdrop,
  as: Element = 'nav',
  class: className = '',
  ...rest
} = Astro.props
---

<Element class={cn(navBarCva({ position, placement, border, backdrop }), className)} {...rest}>
  <slot />
</Element>
