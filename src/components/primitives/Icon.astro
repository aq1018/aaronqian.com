---
import type { HTMLAttributes } from 'astro/types'
import { Icon as AstroIcon } from 'astro-icon/components'

import { iconVariants } from './Icon.cva'
import type { IconVariants } from './Icon.cva'

import { cn } from '@/lib/utils'

// HTMLAttributes first, then IconVariants overrides
export interface Props extends HTMLAttributes<'svg'>, IconVariants {
  name: string
  class?: string
}

const { name, size, class: className = '', ...rest } = Astro.props

// Filter out null values from rest props (AstroIcon doesn't accept null)
const filteredRest = Object.fromEntries(Object.entries(rest).filter((entry) => entry[1]))
---

<AstroIcon {name} class={cn(iconVariants({ size }), className)} {...filteredRest} />
