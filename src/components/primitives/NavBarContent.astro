---
import type { HTMLTag, Polymorphic } from 'astro/types'

import { type NavBarContentStyle, navBarContentCva } from './NavBarContent.cva'

import { cn } from '@/lib/utils'

export type Props<Tag extends HTMLTag = 'div'> = Polymorphic<{ as: Tag }> &
  NavBarContentStyle & {
    class?: string
  }

const { height, as: Element = 'div', class: className = '', ...rest } = Astro.props
---

<Element class={cn(navBarContentCva({ height }), className)} {...rest}>
  <slot />
</Element>
