---
import type { HTMLAttributes } from 'astro/types'

import { proseCva } from './Prose.cva'
import type { ProseStyle } from './Prose.cva'

import { cn } from '@/lib/utils'

export interface Props extends HTMLAttributes<'div'>, ProseStyle {
  class?: string
}

const { size, class: className = '', ...rest } = Astro.props
---

<div class={cn('prose prose-invert', proseCva({ size }), className)} {...rest}>
  <slot />
</div>
