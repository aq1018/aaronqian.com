---
/**
 * ItemList JSON-LD schema component
 * Generates structured data for collection/list pages
 */

import { site } from '@/config/site'
import { generateItemListSchema } from '@/lib/jsonld/generators'
import type { ItemListProps } from '@/lib/jsonld/types'
import JsonLd from './JsonLd.astro'

type Props = ItemListProps

const { name, description, items } = Astro.props

const schema = generateItemListSchema({ name, description, items }, site.url)
---

<JsonLd {schema} />
