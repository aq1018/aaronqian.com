---
/**
 * BreadcrumbList JSON-LD schema component
 * Generates structured data for navigation breadcrumbs
 */

import { site } from '@/config/site'
import { generateBreadcrumbSchema } from '@/lib/jsonld/generators'
import type { BreadcrumbItem } from '@/lib/jsonld/types'
import JsonLd from './JsonLd.astro'

export interface Props {
  items: BreadcrumbItem[]
}

const { items } = Astro.props

const schema = generateBreadcrumbSchema(items, site.url)
---

<JsonLd {schema} />
