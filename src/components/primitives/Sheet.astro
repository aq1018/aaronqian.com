---
import type { HTMLTag, Polymorphic } from 'astro/types'

import { sheetCva } from './Sheet.cva'
import type { SheetStyle } from './Sheet.cva'

import { cn } from '@/lib/utils'

export type Props<Tag extends HTMLTag = 'div'> = Polymorphic<{ as: Tag }> &
  SheetStyle & {
    class?: string
  }

const {
  variant,
  color,
  padding,
  hover,
  as: Element = 'div',
  class: className = '',
  ...rest
} = Astro.props
---

<Element class={cn(sheetCva({ variant, color, padding, hover }), className)} {...rest}>
  <slot />
</Element>
