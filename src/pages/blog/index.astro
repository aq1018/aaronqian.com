---
import { getCollection } from 'astro:content'
import { Image } from 'astro:assets'
import BaseLayout from '../../layouts/BaseLayout.astro'
import Navigation from '../../components/Navigation.astro'

const posts = await getCollection('blog')
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
---

<BaseLayout
  title="Blog - Aaron Qian"
  description="Software engineering insights, tutorials, and thoughts from Aaron Qian."
>
  <Navigation />
  <main class="flex-1">
    <div class="mx-auto max-w-4xl px-4 py-12 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-fg">Blog Posts</h1>

      <div class="mt-8 space-y-8">
        {
          sortedPosts.map((post) => (
            <article class="border-b border-border pb-8">
              {post.data.hero && (
                <a href={`/blog/${post.slug}`} class="block">
                  <Image
                    src={post.data.hero}
                    alt={post.data.title}
                    width={800}
                    height={200}
                    class="mb-4 h-48 w-full rounded-lg object-cover"
                  />
                </a>
              )}
              <h2 class="text-2xl font-semibold">
                <a
                  href={`/blog/${post.slug}`}
                  class="text-link transition-colors hover:text-link-hover"
                >
                  {post.data.title}
                </a>
              </h2>
              <p class="mt-2 text-sm text-muted">
                {post.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </p>
              {post.data.description && <p class="mt-3 text-fg">{post.data.description}</p>}
              {post.data.tags && (
                <div class="mt-3 flex flex-wrap gap-2">
                  {post.data.tags.map((tag) => (
                    <span class="rounded bg-highlight px-2 py-1 text-sm text-muted">{tag}</span>
                  ))}
                </div>
              )}
            </article>
          ))
        }
      </div>
    </div>
  </main>
</BaseLayout>
