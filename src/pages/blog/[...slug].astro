---
import contentCssUrl from '@/styles/content.css?url'
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

import ArticleSchema from '@/components/primitives/seo/ArticleSchema.astro'
import BreadcrumbSchema from '@/components/primitives/seo/BreadcrumbSchema.astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import BlogPost from '@/components/pages/BlogPost.astro'
import { getBlogDate, getBlogSlug } from '@/lib/blog'

export async function getStaticPaths() {
  // Filter out drafts in production
  const posts = await getCollection('blog', ({ data }) => !import.meta.env.PROD || !data.draft)
  return posts.map((post: CollectionEntry<'blog'>) => ({
    params: { slug: getBlogSlug(post.id) },
    props: { post },
  }))
}

export interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
const cleanSlug = getBlogSlug(post.id)
const publishDate = getBlogDate(post.id)

const ogImage = `/og/blog/${cleanSlug}.png`

const breadcrumbItems = [
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog' },
  { name: post.data.title, url: `/blog/${cleanSlug}` },
]
---

<BaseLayout
  title={`${post.data.title} - Aaron Qian`}
  description={post.data.description}
  image={ogImage}
>
  <link
    slot="head"
    rel="preload"
    href={contentCssUrl}
    as="style"
    onload="this.onload=null;this.rel='stylesheet'"
  />
  <noscript slot="head"><link rel="stylesheet" href={contentCssUrl} /></noscript>
  <ArticleSchema
    slot="head"
    title={post.data.title}
    description={post.data.description}
    datePublished={publishDate}
    url={`/blog/${cleanSlug}`}
    image={ogImage}
  />
  <BreadcrumbSchema slot="head" items={breadcrumbItems} />
  <BlogPost {post} />
</BaseLayout>
