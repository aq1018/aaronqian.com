---
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

import ArticleSchema from '@/components/primitives/seo/ArticleSchema.astro'
import BreadcrumbSchema from '@/components/primitives/seo/BreadcrumbSchema.astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import BlogPost from '@/components/pages/BlogPost.astro'

export async function getStaticPaths() {
  const posts = await getCollection('blog')
  return posts.map((post: CollectionEntry<'blog'>) => ({
    params: { slug: post.slug },
    props: { post },
  }))
}

export interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
const ogImage = `/og/blog/${post.slug}.png`

const breadcrumbItems = [
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog' },
  { name: post.data.title, url: `/blog/${post.slug}` },
]
---

<BaseLayout
  title={`${post.data.title} - Aaron Qian`}
  description={post.data.description}
  image={ogImage}
>
  <ArticleSchema
    slot="head"
    title={post.data.title}
    description={post.data.description}
    datePublished={post.data.date}
    url={`/blog/${post.slug}`}
    image={ogImage}
  />
  <BreadcrumbSchema slot="head" items={breadcrumbItems} />
  <BlogPost {post} />
</BaseLayout>
