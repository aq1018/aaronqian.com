---
import AboutPage from '@/components/pages/AboutPage.astro'
import ProfilePageSchema from '@/components/primitives/seo/ProfilePageSchema.astro'
import OrganizationSchema from '@/components/primitives/seo/OrganizationSchema.astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import { staticPages } from '@/config/pages'

const { title, description } = staticPages.about
const ogImage = '/og/about.png'
---

<BaseLayout {title} {description} image={ogImage}>
  <ProfilePageSchema slot="head" />
  <OrganizationSchema slot="head" />
  <AboutPage />
</BaseLayout>
